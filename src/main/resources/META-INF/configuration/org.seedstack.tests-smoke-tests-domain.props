[org.seedstack.seed.persistence]
jpa.units = product-domain, smoke-domain
jdbc.datasources = smoke-ds

[org.seedstack.seed.persistence.jdbc.datasource.smoke-ds]
driver = org.hsqldb.jdbcDriver
url = jdbc:hsqldb:mem:test
user = sa
password =
property.sql.enforce_strict_size = true

# Configure the smoke tests JPA unit
[org.seedstack.seed.persistence.jpa.unit.smoke-domain]
datasource = smoke-ds
property.hibernate.dialect = org.hibernate.dialect.HSQLDialect
property.hibernate.hbm2ddl.auto = update

[org.seedstack.tests.domains.client.*]
jpa-unit = smoke-domain

[org.seedstack.tests.domains.jms.*]
jpa-unit = smoke-domain
